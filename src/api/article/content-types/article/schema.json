{
  "kind": "collectionType",
  "collectionName": "articles",
  "info": {
    "singularName": "article",
    "pluralName": "articles",
    "displayName": "Article"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "article_id": {
      "type": "string",
      "required": false,
      "unique": false
    },
    "title": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "content": {
      "type": "richtext"
    },
    "summary": {
      "type": "richtext"
    },
    "sport": {
      "type": "enumeration",
      "required": true,
      "enum": ["basketball", "football", "soccer"]
    },
    "gameDate": {
      "type": "datetime"
    },
    "article_status": {
      "type": "enumeration",
      "enum": ["draft", "review", "published"]
    },
    "authorType": {
      "type": "enumeration",
      "enum": ["AI", "Human"]
    }
  }
}
